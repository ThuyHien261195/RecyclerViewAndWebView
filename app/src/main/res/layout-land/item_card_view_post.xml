<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_post_landscape_height"
    android:layout_margin="@dimen/item_post_margin"
    app:cardCornerRadius="@dimen/item_post_radius"
    app:contentPadding="@dimen/item_post_spacing"
    app:cardBackgroundColor="@color/color_item_bg">

    <LinearLayout
        android:id="@+id/linear_layout_reddit_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_author"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/color_author_title" />

            <TextView
                android:id="@id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_post_title"
                android:textSize="@dimen/score_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_post_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_post_title"
            android:textSize="@dimen/title_comment_text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>