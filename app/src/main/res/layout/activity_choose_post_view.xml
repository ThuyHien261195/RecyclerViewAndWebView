<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.hasbrain.areyouandroiddev.activity.ChoosePostViewActivity">

    <Button
        android:id="@+id/button_recycler_view"
        android:layout_width="@dimen/btn_common_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="@string/action_recycler_view"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_list_view"
        android:layout_width="@dimen/btn_common_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btn_common_vertical_margin"
        android:background="@color/colorAccent"
        android:text="@string/action_list_view"
        android:textColor="@android:color/white" />
</LinearLayout>
