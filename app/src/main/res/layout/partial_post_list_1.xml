<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/post_card_view_height"
    android:layout_margin="@dimen/card_view_margin"
    app:cardCornerRadius="4dp"
    app:contentPadding="@dimen/post_card_view_spacing">

    <LinearLayout
        android:id="@+id/linear_layout_reddit_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="7"
                android:textColor="@color/color_gray_title"
                android:textSize="@dimen/score_text_size" />

            <TextView
                android:id="@+id/text_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/text_view_horizontal_spacing"
                android:gravity="bottom"
                android:text="@string/title_author"
                android:textColor="@color/color_author_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_view_vertical_spacing"
            android:text="fadfa"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_view_vertical_spacing"
            android:text="@string/title_comment"
            android:textColor="@color/color_gray_title" />
    </LinearLayout>
</android.support.v7.widget.CardView>